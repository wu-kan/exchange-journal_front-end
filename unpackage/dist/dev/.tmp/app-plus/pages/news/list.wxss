}
.list-cell {
	padding: 30rpx 32rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.cell-title-box {
	position: relative;
}
.min {
	min-height: 90rpx
}
.cell-title {
	padding-right: 172rpx;
	font-size: 36rpx;
	line-height: 56rpx;
	word-break: break-all;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 3;
